<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--键盘的设置-->
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
        <!--activity切换动画-->
    </style>
    <!--迎导页面 添加背景加载图 去除启动出现空白页面-->
    <style name="WelcomeTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/ic_app_launcher</item>
    </style>

    <style name="ActivityTheme" parent="AppTheme.NoActionBar">
        <!--键盘的设置-->
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
        <!--activity切换动画-->
    </style>

    <style name="activityTheme_NewTask" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:animationDuration">0</item>
        <!--能够去掉NEW TASK所出现的黑屏-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--dialog-->
    <style name="style_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>
</resources>
